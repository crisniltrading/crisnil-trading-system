# Server Configuration
NODE_ENV=development
PORT=5001

# Frontend URL (update after deploying frontend)
FRONTEND_URL=http://localhost:3000

# MongoDB Connection (get from MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/crisnil-trading?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# Email Configuration (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Crisnil Trading <your-email@gmail.com>

# Image Upload Configuration (Local Storage)
# Images are stored in backend/uploads/products/
# Max file size: 5MB
# Allowed formats: jpeg, jpg, png, gif, webp
UPLOAD_PATH=./uploads/products
MAX_FILE_SIZE=5242880

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
